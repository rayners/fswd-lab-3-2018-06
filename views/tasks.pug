extends ./layout

block body
    script.
        var tasks = [#{completedTasks[0].id}];
    h1 Tasks

    if completedTasks
        h3 Completed Tasks
        ul
            each task, index in completedTasks
                li
                    a(href="/tasks/" + task.id) Task ##{task.id}: #{task.name}

    if incompleteTasks
        h3 Incomplete Tasks
        ul
            each task, index in incompleteTasks
                li
                    a(href="/tasks/" + task.id) Task ##{task.id}: #{task.name}


    form(method="POST" action="/tasks")
        input(type='text' name='name')
        button(type='submit') Submit

    hr

    #jqueryTasks
        ul

        input#jqueryTask(type="text")
        button Add task

    hr

    #vueTasks
        | {{ message }}

    hr
